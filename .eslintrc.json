{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "indent": ["error","tab"],
        "linebreak-style": 0,
        "quotes": ["error","single"],
        "semi": ["error","never"],
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"]
    }
}